{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if import_profile|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.import_profile.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.import_profile.name'|trans) }}</th>
            <th>{{ sylius_resource_sort('description', 'sylius.import_profile.description'|trans) }}</th>
            <th>{{ sylius_resource_sort('code', 'sylius.import_profile.code'|trans) }}</th>
            <th>{{ sylius_resource_sort('importer', 'sylius.import_profile.importer'|trans) }}</th>
            <th>{{ sylius_resource_sort('importerConfiguration', 'sylius.import_profile.importerConfiguration'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr id="{{ import_profile.id }}">
            <td>{{ import_profile.id }}</td>
            <td>{{ import_profile.name }}</td>
            <td>{{ import_profile.description }}</td>
            <td>{{ import_profile.code }}</td>
            <td>{{ import_profile.importer }}</td>
            <td>{{ import_profile.importerConfiguration }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_import_job_index', {'importProfile': import_profile.id})) }}
                </div>
            </td>
        </tr>
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.import_profile.no_results'|trans) }}
{% endif %}
