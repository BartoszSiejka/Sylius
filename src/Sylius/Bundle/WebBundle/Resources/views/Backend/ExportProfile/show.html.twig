{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if export_profile|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.export_profile.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('name', 'sylius.export_profile.name'|trans) }}</th>
            <th>{{ sylius_resource_sort('description', 'sylius.export_profile.description'|trans) }}</th>
            <th>{{ sylius_resource_sort('code', 'sylius.export_profile.code'|trans) }}</th>
            <th>{{ sylius_resource_sort('exporter', 'sylius.export_profile.exporter'|trans) }}</th>
            <th>{{ sylius_resource_sort('exporterConfiguration', 'sylius.export_profile.exporterConfiguration'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr id="{{ export_profile.id }}">
            <td>{{ export_profile.id }}</td>
            <td>{{ export_profile.name }}</td>
            <td>{{ export_profile.description }}</td>
            <td>{{ export_profile.code }}</td>
            <td>{{ export_profile.exporter }}</td>
            <td>{{ export_profile.exporterConfiguration }}</td>
            <td>
                <div class="pull-right">
                {{ buttons.show(path('sylius_backend_export_job_index', {'exportProfile': export_profile.id})) }}
                </div>
            </td>
        </tr>
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.export_profile.no_results'|trans) }}
{% endif %}
