                </div>
            {% endfor %}
            <div id="data_fetcher" class="configuration">
            {% if form.dataFetcherConfiguration is defined %}
                {% for field in form.dataFetcherConfiguration %}
                    {{ form_row(field) }}
                {% endfor %}
            {% endif %}
            </div>
        </div>#}
</fieldset>

