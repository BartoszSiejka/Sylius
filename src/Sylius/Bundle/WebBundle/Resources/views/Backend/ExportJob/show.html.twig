{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}
{% import 'SyliusWebBundle:Backend/Macros:misc.html.twig' as misc %}

{% if export_job|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', 'sylius.export_job.id'|trans) }}</th>
            <th>{{ sylius_resource_sort('exportProfile', 'sylius.export_job.export_profile_id'|trans) }}</th>
            <th>{{ sylius_resource_sort('status', 'sylius.export_job.status'|trans) }}</th>
            <th>{{ sylius_resource_sort('startTime', 'sylius.export_job.startTime'|trans) }}</th>
            <th>{{ sylius_resource_sort('endTime', 'sylius.export_job.endTime'|trans) }}</th>
            <th>{{ sylius_resource_sort('createdAt', 'sylius.export_job.createdAt'|trans) }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'sylius.export_job.updatedAt'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr id="{{ export_job.id }}">
            <td>{{ export_job.id }}</td>
            <td>{{ export_job.export_profile_id }}</td>
            <td>{{ export_job.status }}</td>
            <td>{{ export_job.startTime|date }}</td>
            <td>{{ export_job.endTime|date }}</td>
            <td>{{ export_job.createdAt|date }}</td>
            <td>{{ export_job.updatedAt|date }}</td>
            <div class="pull-right">
                {{ buttons.show(path('sylius_backend_export_job_show', {'id': export_job.id})) }}
            </div>
        </tr>
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.export_profile.no_results'|trans) }}
{% endif %}

